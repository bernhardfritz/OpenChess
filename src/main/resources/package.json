{
  "name": "openchess",
  "version": "1.0.0",
  "description": "",
  "main": "js/client.js",
  "scripts": {
    "watch-css": "catw -c 'lessc -' 'less/*.less' -o static/bundle.css -v",
    "watch-js": "watchify js/*.js -o static/bundle.js -dv -t [ babelify --presets [ es2015 ] ]",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' 'less/*.less' > static/bundle.css",
    "build-js": "browserify js/*.js -t [ babelify --presets [ es2015 ] ] > static/bundle.js",
    "build": "npm run build-css && npm run build-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bernhardfritz/OpenChess.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bernhardfritz/OpenChess/issues"
  },
  "homepage": "https://github.com/bernhardfritz/OpenChess#readme",
  "dependencies": {
    "backbone": "^1.3.3",
    "jquery": "^3.1.1",
    "jquery-ui-browserify": "^1.11.0-pre-seelio",
    "less": "^2.7.1",
    "socket.io-client": "^1.7.2"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "catw": "^1.0.1",
    "watchify": "^3.8.0"
  }
}
